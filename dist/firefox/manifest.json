{
  "manifest_version": 3,
  "name": "星际公民盒子浏览器拓展",
  "version": "0.0.11",
  "description": "为星际公民网站及工具站提供汉化",
  "author": "xkeyC",
  "icons": {
    "16": "icons/icon.png",
    "48": "icons/icon.png",
    "192": "icons/icon.png"
  },
  "host_permissions": [
    "https://git.scbox.xkeyc.cn/*"
  ],
  "permissions": [
    "storage",
    "contextMenus"
  ],
  "action": {
    "default_popup": "action/default_popup.html"
  },
  "background": {
    "scripts": [
      "background/scripts.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "exclude_matches": [
        "https://robertsspaceindustries.com/spectrum/*"
      ],
      "js": [
        "content_scripts/content-0.js"
      ],
      "run_at": "document_end",
      "css": []
    },
    {
      "matches": [
        "https://www.erkul.games/*"
      ],
      "js": [
        "content_scripts/content-1.js"
      ],
      "run_at": "document_end",
      "css": []
    },
    {
      "matches": [
        "https://robertsspaceindustries.com/*"
      ],
      "js": [
        "content_scripts/content-2.js"
      ],
      "run_at": "document_idle",
      "css": []
    }
  ]
}